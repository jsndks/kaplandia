<div class="pinPopup">
    <div class="pinPopup-hd">
        <a href="#"><h2 class="pinPopup-hd-title">{{ title }}</h2></a>
        <div class="pinPopup-bd-date">{{ date }}</div>
    </div>
    <div class="pinPopup-bd">
        <div class="pinPopup-bd-sub">{{description}}</div>

        {{#each posts}}
            <a class="pinPopup-hd-link" href="{{ url }}" title="{{ title }}">Read More</a>
        {{/each}}

    </div>
</div>